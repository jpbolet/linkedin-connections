extends layout
block content
  div(class="container")
    table(class="uk-table uk-table-striped uk-table-small")
      thead
        tr
          th Timestamp
          th Merchant
          th Description
          th Amount
      tfoot
      tbody
        each doc in docs
          tr
            td= doc.timestamp
            td= doc.merchant_name
            td= doc.description
            td= doc.amount
